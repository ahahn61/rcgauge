    <solid android:color="@color/colorLightRed"/>
    <corners android:radius="10dp" />
    <gradient
        android:startColor="@color/colorDarkRed"
        android:endColor="@color/colorLightRed2"
        android:angle="-90"
        android:type="linear"
        />
